# Backend Environment Variables
# Copy this to .env and replace with your actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# Google OAuth Configuration
# Get from: https://console.cloud.google.com/apis/credentials
# IMPORTANT: Only the Client ID is needed (not Client Secret for this implementation)
GOOGLE_CLIENT_ID=

# Razorpay Configuration
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# JWT Secret
# Generate a strong random string (minimum 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=

# SendGrid API Key (Optional - for email notifications)
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@anandayojan.com

# Google Apps Script Webhook (Optional - for Google Sheets integration)
# Deploy Apps Script as web app and paste URL + secret here
APPS_SCRIPT_URL=
APPS_SCRIPT_SECRET=

# Mock Mode (set to 'false' when using real credentials)
# When true: accepts any credentials and uses mock data
# When false: verifies real credentials with Google/Razorpay
USE_MOCK=true

# Frontend Base URL (for CORS)
# Development: http://localhost:5173
# Production: https://anandayojan.com
FRONTEND_BASE_URL=http://localhost:5173
